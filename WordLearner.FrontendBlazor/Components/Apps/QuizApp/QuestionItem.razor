@using WordLearner.Domain.WordAggregate
@if(Question != null)
{
    <details style="padding-inline:32px;min-height:50px">
        <summary>
            <h3 style="margin:0">@Question.Content</h3>
        </summary>
        <QuestionChoices OnPickedChoice="OnPickedChoice" Question="Question"></QuestionChoices>
    </details>

}
else
{
    <div style="font-size:1.5rem">Please Wait...</div>
}
@code {
    [Parameter]
    public EventCallback<bool> OnPickedChoice { get; set; }
    [Parameter]
    public Question Question { get; set; }

}